<div class="row justify-content-md-center">
  <div class="pt-4 col-md-10">
    <h2>新規投稿</h2>
    <%# HTTPメソッドを指定：　POST＝投稿メソッド, url: パスの明示 %>
    <%= form_with model: @list, url: "/lists", method: :post do |f| %>
      <div class="mb-3">
        <label for="formGroupTitleInput" class="form-label">タイトル</label>
        <%= f.text_field :title, class:"form-control" %>
      </div>

      <div class="mb-3">
        <label for="formGroupBodyInput" class="form-label">本文</label>
        <%= f.text_area :body, class:"form-control" %>
      </div>

      <div class="mb-3">
        <%= f.submit '投稿', class:"btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
